include forms
include ../components/message

mixin dropdown(field)
	.form-group
		label.col-sm-2.col-sm-offset-2.control-label #{field.label}
		.col-sm-6
			select.form-control(name="#{field.fieldName}" data-bind="value: #{field.fieldName}")
				block
		if field.help
			.col-sm-2
				.questionmarkicon(data-toggle="tooltip" data-placement="bottom" data-original-title="#{field.help}")

mixin sheets-dropdown()
	+dropdown({label: 'Sheet', fieldName: 'sheet'}, 'sheets')
		//ko foreach: sheets
		option(data-bind="attr: { label: Name, value: $index}")
		// /ko

mixin row-dropdown(field)
	+dropdown(field)
		block
		optgroup(data-bind="foreach: columns" label="Map this field to:")
			option(data-bind="attr: { label: $data, value: $index}")

mixin optional-row-dropdown(field, rowSource)
	+row-dropdown(field, rowSource)
		option(value="-1" label="*** No value ***")

mixin excel-login()
	.form-group
		label.col-sm-2.col-sm-offset-2.control-label File location
		.col-sm-6
			input#excelFileLocation.form-control(type="text" data-bind="textInput: fileLocation" name="fileLocation")
		.col-sm-2
			button.btn.btn-default(type="button", data-bind="click: browseExcelFile") Browse...	
	div(data-bind="visible: showInput()" style="display: none;")
		+sheets-dropdown()
		+checkbox('Header row', 'useHeaderRow')
		+row-dropdown({label: "Date", fieldName: "JournalDate", help: "The date the journal applies to. Used to determine whether the journal applies to the current period or not. This is required."})
		each field in [	{label: "Nominal code", fieldName: "AccountCode", help: "The nominal code which the journal has been posted to"}, {label: "Nominal name", fieldName: "AccountName", help: "The name or description of the nominal code"}, {label: "Amount", fieldName: "Amount", help: "The value of the journal"}, {label: "Created by", fieldName: "Username", help: "The name or ID of the user who created the journal"}, {label: "Creation time", fieldName: "Created", help: "The time the journal was created"}, {label: "Description", fieldName: "Description", help: "A description of the journal"}, {label: "ID", fieldName: "Id", help: "The ID of the journal. Multiple rows with the same ID will be combined into one journal."}]
			+optional-row-dropdown(field)
	+errorMessage('errorMessage', true)