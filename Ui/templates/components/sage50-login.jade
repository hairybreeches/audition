include forms

mixin sage50-login()
	.form-group
		label.col-sm-2.col-sm-offset-2.control-label Data location
		.col-sm-6			
			input.form-control(type="text" data-bind="value: dataDirectory")
		.col-sm-2
			button.btn.btn-default(type="button", data-bind="click: browseDataDirectory") Browse...
	+form-field('User ID')
		input.form-control(type="text")
	+form-field('Password')
		input.form-control(type="password")