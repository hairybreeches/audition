include forms



mixin row-dropdown(field)
	+form-field(field)
		select.form-control(name="#{field}" data-bind="value: #{field}, foreach: columnNames")
				option(data-bind="attr: { label: $data, value: $index}")


mixin excel-login()
	.form-group
		label.col-sm-2.col-sm-offset-2.control-label File location
		.col-sm-6
			input#excelFileLocation.form-control(type="text" data-bind="textInput: fileLocation" name="fileLocation")
		.col-sm-2
			button.btn.btn-default(type="button", data-bind="click: browseExcelFile") Browse...	
						
	+row-dropdown('JournalDate')
	each field in ['Description', 'Username', 'Created', 'AccountCode', 'AccountName', 'Amount', 'JournalType']
		+row-dropdown(field)
		