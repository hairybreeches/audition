include ../components/template
include ../components/sage50Import
include ../components/excelImport
include ../components/forms
include ../components/message


mixin import-form(system, url)
	form.form-horizontal(style="display: none;", data-bind="visible: system() === '#{system}', with: #{system}")
		block
		+button-group()
			button.vertical-space.btn.btn-primary(type="submit" data-bind="click: submit, css: { disabled: disabled()}") Login &raquo;

+page('Login', ['sage50Login', 'excelLogin', 'login'])
	.container
		legend.vertical-space Login to accounts system
		.blockable(action="search", method="post")
			.blockscreen.loadscreen(style="display: none;" data-bind="visible: blocked()")
			form.form-horizontal
				fieldset
					+form-field('Accounts system')
						select.form-control(data-bind="value: system")
								option(value="sage50") Sage Line 50			
								option(value="excel") Excel			
			+import-form('sage50', "/api/sage50/login")
				+sage50-import()
			+import-form('excel', "/api/sage50/login")
				+excel-import()
		+errorMessage('error')
		hr.vertical-space

				