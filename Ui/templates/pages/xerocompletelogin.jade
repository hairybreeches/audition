include ../components/template

+page('Login')
	div.container
		form.form-horizontal(action='/api/xero/completelogin', method="post")
			legend.vertical-space To finish logging in to Xero, enter your confirmation code here
			.form-group
				label.col-sm-2.control-label Confirmation code
				.col-sm-10
					input.form-control(type="text" value="")
			hr.vertical-space
			.form-group
				div(class="col-sm-4")
					button(type="submit" class="btn btn-primary") Login &raquo;
	
