include ../components/template
    
+page('Export')
	div.container
		form.form-horizontal(action="search", method="post")
			fieldset
				legend.vertical-space Save results
				.form-group
					label.col-lg-2.control-label File name
					.col-lg-10
						input.form-control(type="text" value="acme-possible-duplicated-journals")                                     				
				.form-group
					label.col-lg-2.control-label File type
					.col-lg-10
						select.form-control
							option Excel spreadsheet (.xlsx)
							option PDF document (.pdf)
				hr.vertical-space
				.form-group
					div(class="col-sm-4")
						button(type="submit" class="btn btn-primary") Save &raquo;
						
						

